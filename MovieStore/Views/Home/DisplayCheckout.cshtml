@model MovieStore.Models.TransactionDetails

@{
    ViewData["Title"] = "DisplayCheckout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DisplayCheckout</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTransaction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table style="float:left; width: 80%;">
                <tr>
                    <td>
                        <div class="form-group">
                            <label asp-for="FName" class="control-label"></label>
                            <input asp-for="FName" class="form-control" required/>
                            <span asp-validation-for="FName" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="LName" class="control-label"></label>
                            <input asp-for="LName" class="form-control" required/>
                            <span asp-validation-for="LName" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" required/>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label asp-for="City" class="control-label"></label>
                            <input asp-for="City" class="form-control" required/>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="State" class="control-label"></label>
                            <input asp-for="State" class="form-control" required/>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="ZipCode" class="control-label"></label>
                            <input asp-for="ZipCode" class="form-control" required/>
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h2>Card Information:</h2>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label asp-for="NameOnCard" class="control-label"></label>
                            <input asp-for="NameOnCard" class="form-control" required/>
                            <span asp-validation-for="NameOnCard" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label asp-for="CreditCardNumber" class="control-label"></label>
                            <input asp-for="CreditCardNumber" class="form-control" required/>
                            <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label asp-for="ExpirationDate" class="control-label"></label>
                            <input type="date" asp-for="ExpirationDate" class="form-control" required/>
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label asp-for="CVV" class="control-label"></label>
                            <input type="password" asp-for="CVV" class="form-control" maxlength="3" required/>
                            <span asp-validation-for="CVV" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
            </table>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DisplayCart">Back to Cart</a>
</div>

