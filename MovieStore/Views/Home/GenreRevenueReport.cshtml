
@{
    ViewData["Title"] = "GenreRevenueReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="text-center">
    <h1>Genre Revenue Report</h1>
    <br />
    <h4> Here is the revenue report generated for:  @ViewBag.GenreName</h4>
    <br />
    <br />
    <h5>From @ViewBag.StartDate to @ViewBag.EndDate there was:</h5>
</div>
<br />
<br />
<div style="display: flex; justify-content:space-evenly">
    @if (ViewBag.TransactionType != "Rentals")
    {
        <div>
            <h5 class="text-center">
                Purchases
            </h5>
            <br />
            <p>
                @ViewBag.TotalPurchases purchases total, and @ViewBag.NewPurchases purchases of new titles.
            </p>
            <br />
            <p class="text-center">Revenue generated by purchases: <span class="text-success">$@ViewBag.PurchaseSum</span></p>
        </div>
    }
    @if (ViewBag.TransactionType != "Purchases")
    {
        <div>
            <h5 class="text-center">
                Rentals
            </h5>
            <br />
            <p>
                @ViewBag.TotalRentals rentals total, with @ViewBag.NewRentals rentals of new Titles
            </p>
            <br />
            <p class="text-center">Revenue generated by rentals: <span class="text-success">$@ViewBag.RentalSum</span></p>
        </div>
    }
</div>

