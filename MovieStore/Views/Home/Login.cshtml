@model MovieStore.Models.LoginModelView

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>User Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="UserUserName">UserName:</label>
                <input asp-for="UserUserName" type="text" name="UserUserName" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="UserPassword">Password:</label>
                <input asp-for="UserPassword" type="text" name="UserPassword" class="form-control" required />
            </div>
        </form>
</div>

